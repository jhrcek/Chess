<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
        ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <!-- %d{HH:mm:ss.SSS} [%thread] %-5level %logger{20} - %msg%n -->
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{18} - %msg%n</pattern>
            
        </encoder>
    </appender>
    <logger name="cz.janhrcek.chess.FEN.FenParser" level="WARN" />
    <logger name="cz.janhrcek.chess.gui.ChessboardComponent" level="INFO" />
    <logger name="cz.janhrcek.chess.gui.SquareImageFactory" level="OFF" />
    <root level="DEBUG"><!-- TRACE, DEBUG, INFO, WARN, ERROR, ALL or OFF-->
        <appender-ref ref="STDOUT" />
    </root>
</configuration>